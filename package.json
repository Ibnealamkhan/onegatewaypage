{
  "name": "onegateway-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "OneGateway - Mobile Recharge Payment Gateway Website",
  "keywords": ["payment-gateway", "mobile-recharge", "fintech", "react", "vite"],
  "author": "OneGateway Team",
  "license": "MIT",
  "homepage": "https://onegateway.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/onegateway/website.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "npm run preview",
    "serve": "serve -s dist -l 3000",
    "deploy": "npm run build:production && npm run serve"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "aaPanel": {
    "nodeVersion": "18",
    "buildCommand": "npm run build:production",
    "startCommand": "npm run serve",
    "distDirectory": "dist",
    "port": 3000,
    "domain": "onegateway.in",
    "ssl": true,
    "gzip": true,
    "cache": {
      "static": "1y",
      "html": "1h"
    }
  },
  "deployment": {
    "type": "static",
    "buildDir": "dist",
    "nodeVersion": "18.x",
    "installCommand": "npm ci --production=false",
    "buildCommand": "npm run build:production",
    "startCommand": "npm run serve",
    "healthCheck": "/",
    "port": 3000,
    "env": {
      "NODE_ENV": "production"
    }
  }
}